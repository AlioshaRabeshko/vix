generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model daily_news_analysis {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  rating    Int
  summary   String   @db.Text()
  query     String
}

model stock_data {
  id         Int      @id @default(autoincrement())
  timestamp  DateTime @default(now())
  ticker     String?
  price      Float?
  forwardPe  Float?
  trailingPe Float?
}

model put_call_ratio {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  value     Float
}

model google_trends {
  id        Int      @id @default(autoincrement())
  keyword   String
  value     Int // Interest (0â€“100)
  date      DateTime
  timestamp DateTime @default(now())

  @@unique([keyword, date], name: "keyword_date")
}

model vix {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  value     Float
  summary   String?
}

model server_logs {
  id        Int      @id @default(autoincrement())
  timestamp DateTime @default(now())
  level     String
  path      String
  message   String @db.Text
}

model crypto_symbol_data {
  timestamp        DateTime
  symbol           String
  openPrice        String
  closePrice       String
  high             String
  low              String
  volume           String
  quoteAssetVolume String
  trades           String

  @@unique([symbol, timestamp], name: "symbol_timestamp")
}

model crypto_macro_data {
  timestamp DateTime @unique

  eth_dominance          String
  btc_dominance          String
  stablecoin_volume_24h  String
  derivatives_volume_24h String
  today_change_percent   String

  total_volume_24h      String
  total_market_cap      String
  stablecoin_market_cap String
  altcoin_market_cap    String
  defi_market_cap       String

  fear_index   Int
  transactions Int
  hash_rate    Int
}

model crypto_metadata {
  timestamp                DateTime
  symbol                   String
  circulating_supply       String
  total_supply             String
  price                    String
  volume_24h               String
  market_cap               String
  market_cap_dominance     String
  fully_diluted_market_cap String

  @@unique([symbol, timestamp], name: "symbol_timestamp")
}

model crypto_whale_alerts {
  timestamp DateTime
  symbol    String
  amount    Int
  value_usd Int

  @@unique([symbol, timestamp], name: "symbol_timestamp")
}
